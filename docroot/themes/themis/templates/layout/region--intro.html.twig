{#
/**
 * @file
 * Theme override to display a region.
 *
 * Available variables:
 * - type: HTML tag for container
 * - content: The content for this region, typically blocks.
 * - attributes: HTML attributes for the region <div>.
 * - container_attributes: HTML attributes for the direct container child div of region
 * - region: The name of the region variable as defined in the theme's
 *   .info.yml file.
 *
 * @see template_preprocess_region()
 */
#}
{%
  set classes = [
    'tms',
    'tms-' ~ region|clean_class,
  ]
%}
{%
  set container_classes = [
    'tms-container-fluid',
  ]
%}
{% if content %}
  <{{ type }}{{ attributes.addClass(classes) }}>
    <div{{ container_attributes.addClass(container_classes) }}>
      <div class="tms-center">
          {{ content }}
      </div>
    </div>
  </{{ type }}>
{% endif %}
